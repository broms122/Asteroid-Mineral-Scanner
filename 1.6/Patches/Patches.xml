<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!-- FSF Complex Jobs Below -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[FSF] Complex Jobs</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/WorkGiverDef[defName = "LongRangeScan_OrbitalAsteroidScanner"]/priorityInType</xpath>
                    <value>
                        <priorityInType>55</priorityInType>
                    </value>
                </li>
        
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/WorkGiverDef[defName = "LongRangeScan_OrbitalAsteroidScanner"]/workType</xpath>
                    <value>
                        <workType>FSFScan</workType>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    
<!-- FSF Complex Jobs Above -->

</Patch>